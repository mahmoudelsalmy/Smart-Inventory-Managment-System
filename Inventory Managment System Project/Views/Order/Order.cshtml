@model IEnumerable<Inventory_Managment_System_Project.Models.Order>
@{
    ViewData["Title"] = "Orders Management";
    
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Inventory Management System</title>
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        .orders-container {
            padding: 20px;
            background: #F0F4FF;
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, #1A3C6E 0%, #4A6FA5 100%);
            color: white;
            padding: 30px;
            border-radius: 12px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .add-btn {
            background: white;
            color: #1A3C6E;
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .add-btn:hover {
                background: #f0f4ff;
                transform: translateY(-2px);
            }

        .btn-edit {
            background: #2563eb;
            color: ghostwhite;
            padding: 10px 16px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .btn-edit:hover {
                background: #1c34d4;
                color: #fff;
                transform: translateY(-2px);
            }

        .btn-delete {
            background: #ef4444;
            color: aliceblue;
            padding: 10px 16px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            margin-top: 3px;
        }

            .btn-delete:hover {
                background: #d1363c;
                color: #fff;
                transform: translateY(-2px);
            }

        .table-responsive {
            overflow-x: auto;
        }

        .modern-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .modern-table th {
                background: #f8fafc;
                color: #1A3C6E;
                font-size: 0.95rem;
                font-weight: 700;
                padding: 15px;
                text-align: left;
                border-bottom: 2px solid #e2e8f0;
            }

            .modern-table td {
                padding: 15px;
                border-bottom: 1px solid #e2e8f0;
                color: #4a5568;
            }

            .modern-table tbody tr:hover {
                background: #f7fafc;
            }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .status-pending {
            background: #fed7d7;
            color: #c53030;
        }

        .status-completed {
            background: #c6f6d5;
            color: #2d7d32;
        }

        .status-processing {
            background: #bee3f8;
            color: #2b6cb0;
        }
    </style>
</head>
<body>
    <div class="orders-container">
        <div class="page-header">
            <div>
                <h1>Order Management</h1>
                <p>Display and manage all orders in the system</p>
            </div>
            <a href="Create" class="add-btn">
                <span class="material-symbols-outlined">add</span> Add New Order
            </a>
        </div>

        <!-- Order Table -->
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer Name</th>
                                <th>Total Amount</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                <th>Order Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.User?.Username</td> <!-- عرض اسم المستخدم بدل الـ ID -->
                                    <td class="fw-bold text-success">@order.TotalAmount</td>
                                    <td class="fw-bold text-success">@order.TotalPrice.ToString("C")</td>
                                    <td>
                                        <span class="status-badge @(order.Status == "Completed" ? "status-completed" : order.Status == "Pending" ? "status-pending" : "status-processing")">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>@order.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td> <!-- تنسيق التاريخ -->
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn-edit">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@order.OrderId" class="btn-delete">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>