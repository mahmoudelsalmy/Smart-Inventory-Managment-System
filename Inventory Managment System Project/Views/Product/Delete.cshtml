@model Inventory_Managment_System_Project.Models.Product

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<style>
    body {
        background: #f5f7fb;
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .main-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        min-height: 100vh;
    }

    .form-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        max-width: 600px;
        width: 100%;
        overflow: hidden;
        border: 1px solid #e5e7eb;
    }

    .card-header {
        background: linear-gradient(135deg, #8b0000 0%, #c1121f 100%);
        color: white;
        padding: 1.8rem;
        text-align: center;
    }

        .card-header h2 {
            margin: 0;
            font-size: 1.6rem;
            font-weight: 700;
        }

    .card-body {
        padding: 2rem 2.2rem;
        text-align: center;
    }

    .product-info {
        margin-bottom: 1.8rem;
        font-size: 1.1rem;
        color: #374151;
    }

        .product-info p {
            margin: 0.4rem 0;
        }

    .btn {
        border-radius: 10px;
        font-size: 0.95rem;
        font-weight: 700;
        padding: 0.75rem 1.4rem;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-1px);
        }

    .btn-danger {
        background-color: #b91c1c;
		color: white;
        border: none;
    }

        .btn-danger:hover {
            background-color: #991b1b;
        }

    .btn-outline-secondary {
        border-color: #94a3b8;
        color: #475569;
    }

        .btn-outline-secondary:hover {
            background-color: #475569;
            color: #fff;
        }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }
</style>

<div class="main-container">
    <div class="form-card">
        <div class="card-header">
            <h2>Delete Product</h2>
        </div>
        <div class="card-body">
            <h2 class="text-danger mb-4">Are you sure you want to delete this product?</h2>

            <div class="product-info">
                <p><strong>Product Name:</strong> @Model.Name</p>
                <p><strong>Price:</strong> @Model.Price</p>
                
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="action-buttons">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Product" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>