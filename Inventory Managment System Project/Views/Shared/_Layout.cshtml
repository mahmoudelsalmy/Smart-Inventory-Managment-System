@{
    ViewData["Title"] = "ERP System";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>

    <!-- Google Fonts & Icons -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/sidebar.css" />
</head>
<body>
    <div class="loading-overlay" id="loading-overlay">
        <div class="loading-spinner"></div>
    </div>
    <!-- زرار فتح/قفل القائمة -->
    <div class="toggle-btn" onclick="toggleSidebar()">
        <span class="material-symbols-outlined">menu</span>
    </div>

    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            
            <h2>ERP System</h2>
        </div>

        <ul class="sidebar-links">
            <h4>
                <span>Main Menu</span>
                <div class="menu-separator"></div>
            </h4>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Dashboard" title="Dashboard"> <span class="material-symbols-outlined"> dashboard </span>Dashboard</a>
            </li>
            @* <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Pages" asp-action="#"><span class="material-symbols-outlined"> overview </span>Overview</a>
            </li>
            <li>
                <a href="#"><span class="material-symbols-outlined"> monitoring </span>Analytic</a>
            </li>
            <h4>
                <span>General</span>
                <div class="menu-separator"></div>
            </h4> *@
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Product" title="Products">
                    <span class="material-symbols-outlined" >
                        deployed_code
                    </span>Products
                </a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Category" title="Categories">
                    <span class="material-symbols-outlined" >
                        category
                    </span>Categories
                </a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Order" title="Orders"><span class="material-symbols-outlined" > move_up </span>Orders</a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Shipment" asp-action="Shipment" title="Shipments">
                    <span class="material-symbols-outlined" >
                        local_shipping
                    </span>Shipments
                </a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Invoices" asp-action="Invoices" title="Invoices">
                    <span class="material-symbols-outlined" >
                        receipt
                    </span>Invoices
                </a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Warehouse" asp-action="Warehouse" title="Warehouses">
                    <span class="material-symbols-outlined" >
                        inventory_2
                    </span>Warehouses
                </a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Report" asp-action="Reports" title="All Reports"><span class="material-symbols-outlined"> flag </span>All Reports</a>
            </li>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Setting" asp-action="Notification" title="Notifications"><span class="material-symbols-outlined" > notifications_active </span>Notifications</a>
            </li>
            <h4>
                <span>Account</span>
                <div class="menu-separator"></div>
            </h4>
            @* <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Setting" asp-action="Profile"><span class="material-symbols-outlined"> account_circle </span>Profile</a>
            </li>
            <li>
                <a href="#"><span class="material-symbols-outlined"> settings </span>Settings</a>
            </li> *@
            <li>
                <a href="mailto:mahmoudelsalmy1@gmail.com" title="Contact Us">
                    <span class="material-symbols-outlined" >
                        mail
                    </span>Contact Us
                </a>
            </li>

            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Registration" asp-action="LogOut" title="Logout"><span class="material-symbols-outlined"> logout </span>Logout</a>
            </li>
        </ul>

    </aside>

    <main style="margin-left: 85px; padding: 20px; transition: all 0.4s ease;" id="main-content">
        @RenderBody()
    </main>



    @RenderSection("Scripts", required: false)

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("open");
            document.getElementById("main-content").classList.toggle("shift");
        }
    </script>
</body>
</html>
